'use strict';

function calcAge(birthYear){
    const age = 2037 - birthYear;
    const firstName = 'Artur';//can create same variable name inside scope

    function printAge(){
        const output =`You are ${age}, born in ${birthYear}`;
        console.log(output);
    }
    if (birthYear >=1981 && birthYear<=1996){
        var millenial = true;
        const str = `Oh, and you a millenial, ${firstName}`;
    }
    printAge();
    console.log(str); //const is scope-blocked
    console.log(millenial); //var is function blocked, working outside scope
}

const firstName = 'Jonas';
calcAge(1991);
console.log(age); //demonstrating out of scope error
printAge();//out of scope
